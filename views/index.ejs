<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
    	html, body{
    		height: 100%;
    		margin: 0;
    	}
    	.container{min-height: 100%}
    	.footer{
    		position: relative;
    		bottom: 0;
    		width: 100%;
    	}
    </style>
    <title>My OW stats - Nodetest</title>
  </head>
  <body>
    <div class='container mb-5'>
    	<div class='row mt-3'>
    		<div class='col-12 col-lg-7'>
    			<div class='card'>
    				<div class='card-header bg-dark text-white'>
    					<h3>My OW Stats</h3>
    				</div>
    				<div class='card-body'>
		    			<table class='table table-striped'>
		    				<thead class='thead-dark'>
		    					<tr>
		    						<th scope='col'>Hero:</th>
		    						<th scope='col'>Win:</th>
		    						<th scope='col'>On Fire:</th>
		    						<th scope='col'>E/D Ratio:</th>
		    						<th scope='col'></th>
		    					</tr>
		    				</thead>
		    				<tbody>
		    					<%result.forEach(r=>{%>
		    					<tr>
		    						<td><%=r.hero%></td>
		    						<td><%=r.win%></td>
		    						<td><%=r.on_fire%>%</td>
		    						<td><%=r.ed_ratio%></td>
		    						<td>
		    							<a href='/edit/<%=r._id%>'><button type='button' class='btn btn-warning'>Edit</button></a>
		    						</td>
		    					</tr>
		    					<%})%>
		    				</tbody>
		    			</table>
		    		</div>
	    		</div>
    		</div>
    		<div class='col-12 col-lg-5'>
    			<div class='card'>
	    			<div class='card-header bg-dark text-white'>
	    				<h3>Add Heros</h3>
	    			</div>
	    			<div class='card-body'>
		    			<form method='POST' action='/post' class='row p-1'>
		    				<input type='hidden' name='_id' id='_id'>
		    				<div class='col-12 col-lg-3 mb-2 border bg-secondary text-white'>
		    					<label for='hero'>Hero:</label>
		    				</div>
		    				<div class='col-12 col-lg-9 mb-2'>
		    					<input type='text' name='hero' class='form-control'>
		    				</div>
		    				<div class='col-12 col-lg-3 mb-2 border bg-secondary text-white'>
		    					<label for='hero'>Win:</label>
		    				</div>
		    				<div class='col-12 col-lg-9 mb-2'>
		    					<input type='number' name='win' class='form-control'>
		    				</div>
		    				<div class='col-12 col-lg-3 mb-2 border bg-secondary text-white'>
		    					<label for='hero'>On Fire:</label>
		    				</div>
		    				<div class='col-12 col-lg-9 mb-2 input-group'>
		    					<input type='text' name='on_fire' class='form-control'>
		    					<div class='input-group-append'>
		    						<span class='input-group-text'>%</span>
		    					</div>
		    				</div>
		    				<div class='col-12 col-lg-3 mb-3 border bg-secondary text-white'>
		    					<label for='hero'>E/D Ratio:</label>
		    				</div>
		    				<div class='col-12 col-lg-9 mb-3'>
		    					<input type='number' step='0.01' name='ed_ratio' class='form-control'>
		    				</div>
		    				<div class='col-12'>
		    					<button type='submit' class='btn btn-primary btn-block'>Submit</button>
		    				</div>
		    			</form>
		    		</div>
	    		</div>
    		</div>
    	</div>
    </div>
    <div class='footer'>
    	<div class='bg-dark text-white d-flex justify-content-center p-3'>
    		<div>Nodetest - DevJunior&copy;2018</div>
    	</div>
    </div>

    
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>